{
	"name": "flowcraft",
	"type": "module",
	"version": "1.0.0",
	"packageManager": "pnpm@10.18.1",
	"description": "A flexible workflow framework",
	"license": "MIT",
	"homepage": "https://github.com/gorango/flowcraft",
	"repository": {
		"type": "git",
		"url": "https://github.com/gorango/flowcraft.git"
	},
	"bugs": "https://github.com/gorango/flowcraft/issues",
	"keywords": [
		"agentic-workflows",
		"ai-agent",
		"background-jobs",
		"dag",
		"data-pipelines",
		"declarative-workflows",
		"distributed-systems",
		"etl",
		"llm-orchestration",
		"orchestration",
		"rag",
		"state-machine",
		"workflow-engine"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "tsup --watch --config config/tsup.config.ts",
		"build": "tsup --config config/tsup.config.ts",
		"lint": "eslint --fix --ext .ts",
		"typecheck": "tsc --noEmit -p config/tsconfig.json",
		"test": "vitest run --config config/vitest.config.ts",
		"test:watch": "vitest --config config/vitest.config.ts",
		"test:coverage": "vitest run --coverage --config config/vitest.config.ts",
		"docs:dev": "vitepress dev docs",
		"docs:build": "vitepress build docs",
		"docs:preview": "vitepress preview docs"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^5.4.1",
		"@types/node": "^24.7.0",
		"@vitest/coverage-v8": "3.2.4",
		"eslint": "^9.37.0",
		"jiti": "^2.6.1",
		"mermaid": "^11.12.0",
		"tsup": "^8.5.0",
		"typescript": "^5.9.3",
		"vitepress": "^1.6.4",
		"vitepress-plugin-mermaid": "^2.0.17",
		"vitest": "^3.2.4"
	}
}
