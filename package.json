{
	"name": "flowcraft",
	"type": "module",
	"version": "1.0.0-beta.22",
	"packageManager": "pnpm@10.13.1",
	"description": "A flexible workflow framework",
	"repository": {
		"type": "git",
		"url": "https://github.com/gorango/flowcraft.git"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "tsup --watch --config config/tsup.config.ts",
		"build": "tsup --config config/tsup.config.ts",
		"type-check": "tsc --noEmit -p config/tsconfig.json",
		"test": "vitest run --config config/vitest.config.ts",
		"test:watch": "vitest --config config/vitest.config.ts",
		"coverage": "vitest run --coverage --config config/vitest.config.ts",
		"lint": "eslint --fix . --ext .ts",
		"docs:dev": "vitepress dev docs",
		"docs:build": "vitepress build docs",
		"docs:preview": "vitepress preview docs"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^5.0.0",
		"@types/node": "^24.1.0",
		"@vitest/coverage-v8": "3.2.4",
		"eslint": "^9.32.0",
		"jiti": "^2.5.1",
		"mermaid": "^11.9.0",
		"tsup": "^8.5.0",
		"typescript": "^5.8.3",
		"vitepress": "^1.6.3",
		"vitepress-plugin-mermaid": "^2.0.17",
		"vitest": "^3.2.4"
	}
}
