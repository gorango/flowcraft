{
	"name": "@flowcraft/compiler",
	"type": "module",
	"version": "1.0.0",
	"description": "A compiler for transforming imperative TypeScript into declarative Flowcraft workflows",
	"license": "MIT",
	"homepage": "https://flowcraft.js.org",
	"repository": {
		"type": "git",
		"url": "https://github.com/gorango/flowcraft.git"
	},
	"bugs": "https://github.com/gorango/flowcraft/issues",
	"keywords": [
		"flowcraft",
		"compiler",
		"workflow",
		"typescript"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"flowcraft": "workspace:*",
		"resolve": "^1.22.11",
		"typescript": "^5.9.3"
	},
	"devDependencies": {
		"@types/node": "^24.9.1",
		"@types/resolve": "^1.20.6",
		"@vitest/coverage-v8": "3.2.4",
		"tsup": "^8.5.0",
		"vitest": "^4.0.4"
	}
}
