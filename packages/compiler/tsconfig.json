{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "bundler",
		"strict": true,
		"noImplicitAny": true,
		"declaration": true,
		"outDir": "dist",
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["./src", "./__tests__"],
	"exclude": ["node_modules", "dist"]
}
