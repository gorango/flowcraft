{
	"name": "@flowcraft/cli",
	"type": "module",
	"version": "1.0.0-alpha.1",
	"description": "Command-line interface for Flowcraft workflow observability and debugging",
	"bin": {
		"flowcraft": "./dist/index.js"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"typecheck": "tsc --noEmit",
		"test": "vitest run"
	},
	"dependencies": {
		"@flowcraft/postgres-history": "1.0.0-alpha.1",
		"@flowcraft/sqlite-history": "1.0.0-alpha.1",
		"chalk": "^5.6.2",
		"commander": "^14.0.2",
		"flowcraft": "^2.7.0",
		"ora": "^9.0.0",
		"table": "^6.9.0"
	},
	"devDependencies": {
		"@types/node": "^24.9.2",
		"tsup": "^8.5.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.4"
	}
}
