{
	"name": "@flowcraft/vite-plugin",
	"type": "module",
	"version": "1.0.0",
	"description": "Vite plugin for Flowcraft compiler integration",
	"license": "MIT",
	"homepage": "https://flowcraft.js.org",
	"repository": {
		"type": "git",
		"url": "https://github.com/gorango/flowcraft.git"
	},
	"bugs": "https://github.com/gorango/flowcraft/issues",
	"keywords": [
		"flowcraft",
		"vite",
		"plugin",
		"build",
		"workflow"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"@flowcraft/compiler": "workspace:*"
	},
	"devDependencies": {
		"@types/node": "^24.9.1",
		"tsup": "^8.5.0",
		"vite": "^6.0.0",
		"vitest": "^4.0.4"
	},
	"peerDependencies": {
		"vite": "^4.0.0 || ^5.0.0 || ^6.0.0"
	}
}
