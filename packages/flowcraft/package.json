{
	"name": "flowcraft",
	"type": "module",
	"version": "2.4.0",
	"description": "A lightweight workflow framework",
	"license": "MIT",
	"homepage": "https://flowcraft.js.org",
	"repository": {
		"type": "git",
		"url": "https://github.com/gorango/flowcraft.git"
	},
	"bugs": "https://github.com/gorango/flowcraft/issues",
	"keywords": [
		"agentic-workflows",
		"ai-agent",
		"background-jobs",
		"dag",
		"data-pipelines",
		"declarative-workflows",
		"distributed-systems",
		"etl",
		"llm-orchestration",
		"orchestration",
		"rag",
		"state-machine",
		"workflow-engine"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./sdk": {
			"types": "./dist/sdk.d.ts",
			"import": "./dist/sdk.js"
		},
		"./testing": {
			"types": "./dist/testing/index.d.ts",
			"import": "./dist/testing/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"devDependencies": {
		"@types/node": "^24.9.2",
		"@vitest/coverage-v8": "3.2.4",
		"tsup": "^8.5.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.4"
	}
}
